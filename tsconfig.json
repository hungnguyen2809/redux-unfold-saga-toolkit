{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "allowJs": false,
    "target": "ESNext",
    "allowSyntheticDefaultImports": false
  },
  "include": ["src"]
}
